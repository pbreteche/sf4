{% extends 'base.html.twig' %}

{% block title %}Liste d'articles{% endblock %}

{% block body %}

    <h1>Liste des articles</h1>

    <ul>
        {% for article in articles %}
        <li><a href="{{ path('app_article_detail', {id: article.id}) }}">{{ article.title }}</a> - {{ article.publishedAt | date('d/m/Y - H:i:s') }}</li>
        {% endfor %}
    </ul>
{% endblock %}
